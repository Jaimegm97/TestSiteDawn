{% schema %}
  {
    "name": "Prueba Anuncio",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Color del fondo",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Color del texto",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "font_size",
        "label": "Tamaño de la fuente",
        "default": 16,
        "min": 10,
        "max": 100,
        "step": 1
      },
      {
        "type": "richtext",
        "id": "editable_text",
        "label": "Texto",
        "default": "<p>Escriba aquí su texto</p>"
      }
    ],
    "presets": [
      {
        "name": "Anuncio",
        "category": "Anuncios"
      }
    ]
  }
  {% endschema %}
  
  <style>
    .custom-announcement-container {
      display: flex;
      justify-content: center; /* Centra horizontalmente */
      align-items: center; /* Centra verticalmente */
      height: 100vh; /* Altura total de la ventana */
      background-color: {{ settings.background_color }};
      color: {{ settings.text_color }};
      font-size: {{ settings.font_size }}px;
      text-align: center;
      padding: 20px;
    }
  </style>
  
  <div class="custom-announcement-container">
    {{ settings.editable_text | escape }}
  </div>
  