{% schema %}
  {
    "name": "Prueba Anuncio",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Color del fondo",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Color del texto",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "font_size",
        "label": "Tamaño de la fuente",
        "default": 16,
        "min": 10,
        "max": 100,
        "step": 1
      },
      {
        "type": "richtext",
        "id": "editable_text",
        "label": "Texto",
        "default": "<p>Escriba aquí su texto</p>"
      }
    ],
    "presets": [
      {
        "name": "Anuncio",
        "category": "Anuncios"
      }
    ]
  }
  {% endschema %}
  
  <style>
    .custom-announcement-container {
      display: grid;
      place-items: center; /* Centers content both vertically and horizontally */
      height: 100vh; /* Adjust as needed */
    }
    .custom-announcement {
      padding: 20px;
      text-align: center;
    }
  </style>
  
  <div class="custom-announcement-container" style="
    background-color: {{ settings.background_color }};
    color: {{ settings.text_color }};
    font-size: {{ settings.font_size }}px;
  ">
    <div class="custom-announcement">
      {{ settings.editable_text | escape }}
    </div>
  </div>
  