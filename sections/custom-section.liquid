{% schema %}
    {
      "name": "Custom Text Section",
      "settings": [
        {
          "type": "color",
          "id": "background_color",
          "label": "Color del fondo",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Color del texto",
          "default": "#000000"
        },
        {
          "type": "number",
          "id": "font_size",
          "label": "Tama√±o de la fuente",
          "default": 16
        },
        {
          "type": "textarea",
          "id": "text_content",
          "label": "Contenido del texto",
          "default": "Este es un texto personalizado."
        }
      ],
      "presets": [
        {
          "name": "Custom Text Section",
          "category": "Text"
        }
      ]
    }
    {% endschema %}
    
    <div style="
      background-color: {{ settings.background_color }};
      color: {{ settings.text_color }};
      font-size: {{ settings.font_size }}px;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    ">
      {{ settings.text_content }}
    </div>
    