{% schema %}
  {
    "name": "Prueba Anuncio",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Color del fondo",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Color del texto",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "font_size",
        "label": "Tamaño de la fuente",
        "default": 16,
        "min": 10,
        "max": 100,
        "step": 1
      },
      {
        "type": "richtext",
        "id": "editable_text",
        "label": "Texto",
        "default": "<p>Escriba aquí su texto</p>"
      }
    ],
    "presets": [
      {
        "name": "Anuncio",
        "category": "Anuncios"
      }
    ]
  }
  {% endschema %}
  
  <div style="
    background-color: {{ settings.background_color }};
    color: {{ settings.text_color }};
    font-size: {{ settings.font_size }}px;
    padding: 20px;
    text-align: center;
  ">
    {{ settings.editable_text | escape }}
  </div>
  